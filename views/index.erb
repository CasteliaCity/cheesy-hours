<%= erb :header %>

<div class="container">
  <div class="row">
    <div class="span6">
      <h2>Sign in</h2>
    </div>
  </div>
  <form action="/signin" method="POST">
    <p><input class="form-control input-lg" name="student_id" placeholder="Student ID"></p>
    <button type="submit" class="btn btn-success btn-lg" id="scanSubmit">Sign in</button>
  </form>
  <div class="col-lg-4">
    <h4>Currently signed in</h4>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Student ID</th>
        <% if @user_info %>
          <th>Name</th>
        <% end %>
        <th>Time In</th>
      </tr>
      <% @signed_in_sessions.each do |session| %>
        <tr>
          <td><%= session.student_id %></td>
          <% if @user_info %>
            <td><%= session.student.first_name %> <%= session.student.last_name %></td>
          <% end %>
          <td><%= session.time_in.in_time_zone("America/Los_Angeles").strftime("%D %l:%M %p") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= erb :footer %>
