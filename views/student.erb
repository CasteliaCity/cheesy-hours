<%= erb :header %>

<div class="container">
    <h2><%= @student.first_name %> <%= @student.last_name %></h2>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Time In</th>
        <th>Time Out</th>
        <th>Project Hours</th>
      </tr>
      <% @student.lab_sessions.sort_by(&:id).each do |session| %>
        <tr>
          <td><%= session.time_in.in_time_zone("America/Los_Angeles").strftime("%D %l:%M %p") %></td>
          <td><%= session.time_out.in_time_zone("America/Los_Angeles").strftime("%D %l:%M %p") %></td>
          <td><%= ((session.time_out - session.time_in) / 3600).round(1) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= erb :footer %>
