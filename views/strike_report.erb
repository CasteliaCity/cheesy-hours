<%= erb :header %>

<div class="container">
  <h2>VEX Strike Report</h2>
  <% @weeks.each do |week| %>
    <h3><%= week[:start].strftime("%Y-%m-%d") %> &ndash; <%= week[:end].strftime("%Y-%m-%d") %></h3>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Name</th>
        <th>Project Hours</th>
      </tr>
      <% Student.all.select { |s| s.week_hours(week) < @min_hours }.sort_by(&:last_name).each do |student| %>
        <tr>
          <td>
            <a href="/students/<%= student.id %>"><%= student.first_name %> <%= student.last_name %></a>
          </td>
          <td><%= student.week_hours(week).round(1) %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

<%= erb :footer %>
